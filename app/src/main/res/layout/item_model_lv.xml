<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color">


    <ImageView
        android:id="@+id/item_model_thumbnail"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/welcome_default2"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/item_model_in"
        android:layout_toRightOf="@+id/item_model_thumbnail"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_model_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="未知\n未知"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_model_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:maxLines="1"
            android:text="未知"
            android:textColor="@color/author_text"
            android:textSize="15sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/item_model_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/arrow_right_grey" />

</RelativeLayout>
